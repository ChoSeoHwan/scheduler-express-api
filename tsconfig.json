{
    "extends": "@choseohwan/tsconfig-base",
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["dist/**/*"]
}